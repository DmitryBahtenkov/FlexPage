@model mvc.Models.ViewModels.ProjectViewModel

<h2>Вход на сайт</h2>
 
<a asp-action="Create" asp-controller="Project">Новый проект</a>
 
<form asp-action="Create" asp-controller="Project" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите название проекта</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Опишите ваш проект</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="IsPrivate">Приватный проект?</label>
            <input asp-for="IsPrivate" />
        </div>        
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-outline-dark" />
        </div>
    </div>
</form>